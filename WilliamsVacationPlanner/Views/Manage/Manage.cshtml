@model ManagePlannerViewModel

@{
    ViewData["title"] = "Manage";
}

<div class="container">

    <h1 class="text-center">Manage Locations, Accommodations, and Activities</h1>

    <div class="row">
        <div class="col">
            <form asp-action="Add" method="post">

                <h1 class="lead"><strong>Add</strong></h1>

                <input type="hidden" asp-for="@Model.LocationToAdd.LocationId" />
                <input type="hidden" asp-for="@Model.AccommodationToAdd.AccommodationId" />
                <input type="hidden" asp-for="@Model.ActivityToAdd.ActivityId" />

                <div class="form-group border m-0 p-4">
                    <label>Location</label>
                    <input asp-for="@Model.LocationToAdd.Name" class="form-control" />
                </div>
                <div class="form-group border-right border-left m-0 p-4">
                    <label>Accommodation Name</label>
                    <input asp-for="@Model.AccommodationToAdd.Name" class="form-control" />
                </div>
                <div class="form-group border-right border-left m-0 pr-4 pl-4">
                    <label>Accommodation Phone</label>
                    <input asp-for="@Model.AccommodationToAdd.Phone" class="form-control" />
                </div>
                <div class="form-group border-right border-left m-0 p-4">
                    <label>Accommodation Email</label>
                    <input asp-for="@Model.AccommodationToAdd.Email" class="form-control" />
                </div>
                <div class="form-group border m-0 p-4">
                    <label>Activity</label>
                    <input asp-for="@Model.ActivityToAdd.Name" class="form-control" />
                </div>

                <button type="submit" class="btn btn-dark mt-2">Add</button>
            </form>
        </div>

        <div class="col ml-2">
            <form asp-action="Delete" method="post">

                <h1 class="lead"><strong>Delete</strong></h1>

                <div class="form-group border m-0 p-4">
                    <label>Location</label>
                    <select asp-for="@Model.LocationToDelete.LocationId" class="form-control">
                        <option value="-1">Select a Location</option>
                        @foreach (var location in Model.Locations)
                        {
                            <option value="@location.LocationId">@location.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group border-right border-left m-0 p-4">
                    <label>Location</label>
                    <select asp-for="@Model.AccommodationToDelete.AccommodationId" class="form-control">
                        <option value="-1">Select a Location</option>
                        @foreach (var accommodation in Model.Accomodations)
                        {
                            <option value="@accommodation.AccommodationId">@accommodation.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group border m-0 p-4">
                    <label>Location</label>
                    <select asp-for="@Model.ActivityToDelete.ActivityId" class="form-control">
                        <option value="-1">Select a Location</option>
                        @foreach (var activity in Model.Activities)
                        {
                            <option value="@activity.ActivityId">@activity.Name</option>
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-dark mt-2">Delete</button>
            </form>
        </div>
    </div>
</div>
