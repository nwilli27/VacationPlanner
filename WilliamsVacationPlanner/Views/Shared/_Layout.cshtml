<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Williams | @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <div class="jumbotron bg-dark text-white mb-0 text-center">
            <h1 class="display-2">Vacation Planner</h1>
        </div>
    </div>
    <div class="container">
        <ul class="nav">
            <li class="nav-item">
                <a class="nav-link font-weight-bold" asp-controller="Vacation" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link font-weight-bold" asp-controller="Vacation" asp-action="Add">Add Trip</a>
            </li>
            <li class="nav-item">
                <a class="nav-link font-weight-bold" asp-controller="Manage" asp-action="Index">Manage</a>
            </li>
        </ul>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - WilliamsVacationPlanner
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
